'use strict';

/* App Module */

var teamworkEngine = angular.module('teamworkEngine', [
  'ngRoute',

  'projectControllers',

  'projectsDirectives'
]);

teamworkEngine.config(['$routeProvider', '$locationProvider',
  function ($routeProvider) {
    $routeProvider.
      when('/ng-projects', {
        templateUrl: "<%= asset_path('teamwork/projects.html') %> ",
        controller: 'ProjectsIndexCtl'
      }).
      when('/ng-projects-all', {
        templateUrl: "<%= asset_path('teamwork/projects_all.html') %> ",
        controller: 'ProjectsAllCtl'
      }).
      otherwise({
        redirectTo: '/ng-projects'
      });
  }]);